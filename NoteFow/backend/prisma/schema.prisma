generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  username  String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  notes     Note[]
  categories Category[]
}

model Note {
  id               String   @id @default(auto()) @map("_id") @db.ObjectId
  userId           String   @db.ObjectId
  user             User     @relation(fields: [userId], references: [id])
  content          NoteContent
  title            String
  categoryId       String?  @db.ObjectId
  categoryName     String?
  tags             String[]
  keywords         String[]
  vectorId         String?
  version          Int      @default(1)
  aiAnalysisStatus String   @default("pending") // pending, completed, failed
  sharedWith       SharedNote[]
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@index([userId, createdAt(sort: Desc)])
  @@index([userId, categoryId])
}

type NoteContent {
  text   String
  links  String[]
  images ImageMetadata[]
}

type ImageMetadata {
  url        String
  filename   String
  mimeType   String
  size       Int
  uploadedAt DateTime
}

type SharedNote {
  userId   String @db.ObjectId
  username String
  sharedAt DateTime
}

model Category {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  user      User     @relation(fields: [userId], references: [id])
  name      String
  noteCount Int?     @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, name])
}
